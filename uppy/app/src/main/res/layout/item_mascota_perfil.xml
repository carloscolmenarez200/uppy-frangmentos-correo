<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin">

        <ImageView
            android:id="@+id/img_mascota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_perfil"
            android:src="@drawable/perro_1"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#bcbbbb"
            android:id="@+id/linea"
            android:layout_below="@+id/img_mascota"/>


        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/linea"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_me_gusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ic_hueso_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_48_color"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="@dimen/card_margin"
               />

        </LinearLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>


