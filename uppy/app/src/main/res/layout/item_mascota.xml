<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin">
        
        <ImageView
            android:id="@+id/img_mascota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/perro_1"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/linea"            android:background="@color/colorLinea"
            android:id="@+id/linea"
            android:layout_below="@+id/img_mascota"/>

        <ImageView
            android:id="@+id/ic_hueso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_bone_48"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/ic_card_margin_top"
            android:layout_marginEnd="@dimen/ic_card_margin_top"
            android:layout_marginStart="@dimen/ic_card_margin_top"
            android:layout_below="@+id/linea"/>

        <TextView
            android:id="@+id/tv_nombre_mascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ic_hueso"
            android:text="@string/app_name"
            android:layout_alignBottom="@+id/ic_hueso"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_me_gusta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ic_hueso_color"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/ic_hueso_color" />

        <ImageView
            android:id="@+id/ic_hueso_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_bone_48_color"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/ic_card_margin_top"
            android:layout_marginEnd="@dimen/ic_card_margin_top"
            android:layout_marginStart="@dimen/ic_card_margin_top"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linea"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>